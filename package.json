{
  "name": "cryage",
  "version": "1.0.0",
  "private": true,
  "description": "Crypto agent monorepo with Next.js (Bun) frontend and FastAPI (uv) backend",
  "packageManager": "bun@>=1.1.0",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && uv run uvicorn main:app --reload",
    "build": "cd frontend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "start": "bun run start:frontend",
    "start:frontend": "cd frontend && bun run start",
    "lint": "bun run lint:frontend",
    "lint:frontend": "cd frontend && bun run lint",
    "typecheck:frontend": "cd frontend && tsc -p tsconfig.json --noEmit",
    "analyze": "cd frontend && bun run analyze",
    "perf": "cd frontend && bun run perf",
    "install:frontend": "cd frontend && bun install",
    "install:backend": "cd backend && uv sync"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
