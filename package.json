{
  "name": "assistant-chat-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack assistant chat application with Next.js frontend and FastAPI backend",
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && uv run uvicorn main:app --reload",
    "build": "cd frontend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "start:frontend": "cd frontend && bun run start",
    "lint:frontend": "cd frontend && bun run lint",
    "install:frontend": "cd frontend && bun install",
    "install:backend": "cd backend && uv sync"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
